.tabbar {
  z-index: 99;
  background: white;
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  left: 0;
  right: 0;
  padding-bottom: env(safe-area-inset-bottom);
  height: 48px;
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.15);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tabbar-item-wrap {
  height: 48px;
  flex: 1;
  text-align: center;
  color: #888;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tabbar-item {
  position: relative;
  width: 44px;
}

.item-tag {
  position: absolute;
  right: 0px;
  top: 0;
  background: #F53636;
  height: 14px;
  line-height: 14px;
  padding: 0 3px;
  border-radius: 7px;
  color: #fff;
  font-size: 10px;
}

.circle {
  width: 14px;
  padding: 0px 0px 0px 0px;
  border-radius: 50%;
}

.item-icon {
  height: 24px;
  width: 24px;
  margin: 0 auto;
}

.item-title {
  font-size: 10px;
}

<template>
  <div class="page-wrap">
    <div class="form">
      <err-msg :errs="formCheckResult"></err-msg>
      <form>
        <div class="group-cell">
          <div class="cell-item">
            <div class="label">模板名称</div>
            <div class="content">
              <input type="text" v-model="title" placeholder="请输入模板名称" />
            </div>
          </div>
        </div>

        <form-wrap v-if="ready" :_conf="formData" @change="upData" ref="diyfrom"></form-wrap>

        <div class="safearea-box"></div>
        <button @click="subFn" class="btn action-btn btn-primary">保存</button>
      </form>
    </div>

<!--    <popup-layer ref="edit" title="添加模板信息">-->
<!--      <button @click="closePop('edit')" class="btn btn-primary">确定</button>-->
<!--    </popup-layer>-->


    <div class="safearea-box fixed"></div>
  </div>
</template>
<script>
  import wepy from '@wepy/core'
  import store from '../../store'
  import pageMixin from '../../mixins'
  import {
    validateFun
  } from '../../common/helper'
  import {
    opBizOrderTemplate, delBizOrderTemplate, getBizOrderTemplateList
  } from '../../api/order'

  import { error, toast, modal, showLoading, hideLoading } from '../../common/fun'
  import {
    eleTypeList
  } from '../../lib/form/form'

  wepy.page({
    store,
    mixins: [pageMixin],
    data: {
      id: '',
      title: '',
      ready: false,
      addTypeIdx: 0,
      formData: []
    },

    methods: {
      upData(arr) {
        this.formData = arr.concat([])
      },
      dddRow() {
        this.addTypeIdx = 0
        if (!eleTypeList[this.addTypeIdx]) {
          error('请选择新增的表单组件类型')
          return
        }
        this.$refs.diyfrom.rowAdd(eleTypeList[this.addTypeIdx])
      },
      subFn() {
        if (!this.title) {
          this.formCheckResult.push('标题必填')
          return
        }
        if (this.formData.length < 1) {
          this.formCheckResult.push('至少填写一行数据')
          return
        }
        let postData = {
          temp_info: JSON.stringify({formData: this.formData, title: this.title})
        }

        if (this.id)postData.id = this.id

        opBizOrderTemplate(postData, {tip: 'loading'}).then(res => {
          wx.navigateBack()
        }).catch((err) => {
          const {msg: errMsg = ''} = err
          modal(errMsg, '商品发布失败')
        })
      },
      async _init_func() {
        try {
          // showLoading('loading')

          this.ready = true
        } catch (e) {
          error(e.message)
        }
      }
    },
    onReady() {

    },
    onLoad(options) {
      this.id = options.id
      this._init_func()
    },
    onShow() {

    }
  })
</script>

<template>
  <div class="p-t-20">
    <wzw-im-tip ref="wzwImTip"></wzw-im-tip>
    <div class="list-item"  v-for="(item,index) of list" :key="index">
        <div class="flex flex-justify-between flex-vertical-center fz-14 c3 fz-bold p-l-10 p-r-10  item-title" @click="edit(item.id)">
          <div>{{item.store_name}}</div>
          <div>
            <icon  type="iconarrowleft" size="16"  color="#999"></icon>
          </div>
        </div>
        <div  class="flex flex-justify-between flex-vertical-center fz-14 c6  item-center">
          <div>
            营业状态
          </div>
          <div>
            <switch :checked="item.business_status==1"  bindchange="switch1Change($event,item)" style="transform: scale(.8)" class="switch-po"></switch>
          </div>
        </div>

        <div  class="flex flex-justify-between flex-vertical-center fz-14 c6  item-center" @click="cell(item.store_mobile)">
          <div>
            联系方式  <span class="m-l-20">{{item.store_mobile}}</span>
          </div>
          <div>
            <icon  type="iconcall" size="16"  color="#00A8FF" class="m-r-10"></icon>
          </div>
        </div>
    </div>

    <div style="width: 750rpx;height: 86rpx;"></div>
    <div class="submit-main" @click="$linkTo('/pages/store/StoreSettingAdd')">
      新增门店
    </div>




  </div>
</template>

<script>
  import wepy from '@wepy/core'
  import store from '../../store'
  import pageMixin from '../../mixins'
  import { getStoreList, opBizStore } from '../../api/store'
  import { hideLoading, linkTo, showLoading } from '../../common/fun'

  wepy.page({
    store,
    mixins: [pageMixin],
    data: {
      list: [],
      page: 1,
      pageSize: 6,
      totalCount: 0
    },
    onShow() {
      this.list = []
      this.page = 1
      this.getStoreList()
    },
    onReachBottom() {
      if (this.list.length < this.totalCount) {
        this.page++
        this.getStoreList()
      }
    },
    methods: {
      switch1Change(e, item) {
        let boo = e.$wx.detail.value
        let status = 0
        if (boo) {
          status = 1
        } else {
          status = 0
        }
        showLoading('加载中')
        opBizStore({business_status: status, store_id: item.id}).then(res => {
          hideLoading()
        }).catch(e => {
          hideLoading()
        })
      },
      edit(id) {
        let data = '/pages/store/StoreSettingAdd?id=' + id
        linkTo(data)
      },
      cell(item) {
        wx.makePhoneCall({
          phoneNumber: item
        })
      },
      getStoreList() {
        let data = {page: this.page, pageSize: this.pageSize}
        getStoreList(data).then(res => {
          this.totalCount = res.totalCount
          for (let item of res.data) {
            this.list.push(item)
          }
        })
      }
    }

  })

</script>

            <div class="font-wzw">
              <div style="color: #2ABB23" v-if="meituan.provider_status==2">
                已开通
              </div>
              <div v-else-if="meituan.provider_status==1">
                审核中
              </div>
<!--              <div v-else-if="meituan.provider_status==-1">-->
<!--                未开通-->
<!--              </div>-->
              <div class="font-wzw"  v-else-if="meituan.provider_status==-1">

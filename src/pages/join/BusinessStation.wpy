      <div class="line" v-if="applyProgressCount>0"></div>
      <div class="circle" v-if="applyProgressCount>0">
        3
      </div>
      <div class="line" v-if="applyProgressCount>1"></div>
      <div class="circle" v-if="applyProgressCount>1">

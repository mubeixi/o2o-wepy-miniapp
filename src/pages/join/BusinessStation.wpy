</template>

<script>
  import wepy from '@wepy/core'
  import store from '../../store'
  import pageMixin from '../../mixins'

  import { getBizInfo } from '../../api/store'
  import { linkTo } from '../../common/fun'
  import { confirm, ls } from '../../common/helper'
  import { initInfo } from '../../api/system'
  import { Exception } from '../../common/Exception'

  wepy.page({
    store,
    mixins: [pageMixin],
    data: {
      info: { entry_process: {} },
      applyProgressCount: 3, // 入驻可选的步骤有几个，默认全部需要3个
      joinConf: {
        apply_flow: {}
      }
    },
    onShow() {
      this._init_func()
    },
    methods: {
      async _init_func() {
        try {
          // 初始化商户信息
          this.joinConf = await initInfo().then(res => res.data).catch(err => {
            throw Error(err.msg)
          })
          this.applyProgressCount = Object.values(this.joinConf.apply_flow).filter(item => parseInt(item) === 1).length
          this.getBizInfo()
        } catch (e) {
          Exception.handle(e)
        }
      },
      // 利用isHasInfo标记为已经有信息了
      goShow(action) {
        if (action === 'showReason') {
          confirm({
            title: '审核原因',
            content: this.info.apply_info.reject_reason || '为通过审核，请完善资料后再次提交',
            confirmText: '完善资料',
            cancelText: '下次再说'
          }).then(() => {
            this.goShow('edit')
          }).catch(() => {
          })

          return
        }

        if (action === 'add') {
          wx.showActionSheet({
            itemList: ['个人认证', '企业认证'],
            success: (res) => {
              const { tapIndex } = res
              console.log(tapIndex)
              if (tapIndex === 0) {
                linkTo('/pages/join/PersonalCertification?action=add')
              }
              if (tapIndex === 1) {
                linkTo('/pages/join/CompanyCertification?action=add')
              }
            },
            fail(res) {

            }
          })
          return
        }

        const principal_type = this.info.apply_info.principal_type

        if (action === 'show') {
          if (principal_type === 1) {
            linkTo('/pages/join/CompanyCertification?action=show')
          } else {
            linkTo('/pages/join/PersonalCertification?action=show')
          }
          return
        }

        if (action === 'edit') {
          if (principal_type === 1) {
            linkTo('/pages/join/CompanyCertification?action=edit')
          } else {
            linkTo('/pages/join/PersonalCertification?action=edit')
          }
        }
      },
      async getBizInfo() {
        let arr = await getBizInfo({}, { onlyData: true, tip: 'loading' }).catch(e => {
          throw Error(e.msg)
        })
        this.info = arr[0]
        if (!this.info.entry_process) {
          this.info.entry_process = {}
        }
        ls.set('status', this.info.status)
      }
    }

  })

</script>
